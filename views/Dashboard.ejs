<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="Dashboard/style.css">
    <!--Boxicons CDN Link-->
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.3.2/dist/chart.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.1/chart.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.3/moment.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
</head>

<%- include('partials/header') %>

    <div class="main-content">
        <header>
            <div class="header-title-wrapper">
                <div class="header-title">
                    <h1>Réfrigérateur_1</h1>
                </div>
                <div class="open">
                    <button id="pp">
                        Options
                    </button>
                    </div>
            </div>
        </header>
        <div class="everything">
                <div class="block-grid">
                    <div class="graph-card">
                        <div class="graph-content">
                            <div class="graph">
                            <div class="graph-head">
                                <div class="graph-select">
                                    <form  method="post" action="dashboard">
                                    <select class="select" name="select" id="mySelect">
                                        <option value="day">Jour</option>
                                        <option value="week">Semaine</option>
                                        <option value="month">Mois</option>
                                    </select>
                                </form>
                                </div>
                                <div class="graph-param">
                                <div class="day">
                                        <input class="date" type="date" id="input" >  
                                </div>
                                <div class="months">
                                    <input  class="xxxx" type="month" id="input">  
                            </div>
                            <div class="week">
                                <input class="weeks" type="week" id="input">  
                        </div>
                        </div>
                            </div>
                            <div class="graph-board">
                            <canvas id="myChartDash1" width="100%" height=60></canvas>
                            </div>
                            </div>
                          
                        </div>
                        </div>
                    </div>
                    <div class="daunat">
                        <div class="skill" id="cap1">
                            <div class="outer">
                                <div class="inner">
                                    <div id="number">
                                        <%- database %> °C
                                    </div>
                                </div>
                            </div>
                            <svg xmlns="http://www.w3.org/2000/svg" versoin="1.1" width="100px" height="100px">
                                <defs>
                                    <linearGradient id="GradientColor">
                                        <stop offset="0%" stop-color="#05E8BA"/>
                                        <stop offset="100%" stop-color="#05E8BA"/>
                                    </linearGradient>
                                </defs>
                                <circle id="pp0" cx="50" cy="50" r="45" stroke-linecap="round" />
                            </svg>
                        </div>
                        <div class="skill" id="cap2">
                            <div class="outer">
                                <div class="inner">
                                    <div id="number">
                                        <%- database2%> °C
                                    </div>
                                </div>
                            </div>
                            
                            <svg xmlns="http://www.w3.org/2000/svg" versoin="1.1" width="100px" height="100px">
                                <defs>
                                    <linearGradient id="GradientColor1">
                                        <stop offset="0%" stop-color="#01BAEF"/>
                                        <stop offset="100%" stop-color="#01BAEF"/>
                                    </linearGradient>
                                </defs>
                                <circle id="pp" cx="50" cy="50" r="45" stroke-linecap="round" />
                            </svg>
                        </div>
                        
                        <div class="skill" id="cap3">
                            <div class="outer">
                                <div class="inner">
                                    <div id="number">
                                        <%- database3 %> °C
                                    </div>
                                </div>
                            </div>
                            <svg xmlns="http://www.w3.org/2000/svg" versoin="1.1" width="100px" height="100px">
                                <defs>
                                    <linearGradient id="GradientColor2">
                                        <stop offset="0%" stop-color="#2A2A72"/>
                                        <stop offset="100%" stop-color="#2A2A72"/>
                                    </linearGradient>
                                </defs>
                                <circle id="pp1" cx="50" cy="50" r="45" stroke-linecap="round" />
                            </svg>
                        </div>
                    <div class="revenue-card">
                        <div class="rev-content">
                        <div class="rev-info">
                            <h3>Température actuelle</h3>
                        </div>
                        <div class="rev-sum">   
                            <h2><%- temperature %> °C</h2>
                        </div>
                        </div>
                    </div>
                </div>
                </div>
                <div class="popup" id="popup">
                    <div class="model">
                        <div class="together">
                            <i class='bx bxs-x-square'id='x'></i>
                    <h3 class="section-head">Paramètres</h3>
                </div>
                <div class="settings">
                    <div class="form">
                    <div class="top">
                        <p>Modifier la température seuil</p>
                            <div class="">
                                <input type="number" id="limit" name="seuil">
                                <p id="c">°C</p>
                                </div>
                            </div>
                            <div class="buttom">
                                <p>Pour confirmer, veuillez entrer le mot de passe</p>
                                <div class="input">
                                    <input type="password" id="password" name="password">
                                    <span class="eye" id="show"><i class='bx bxs-show' id="eye" onclick="toggle()"></i></span>
                                </div>
                                
                            </div>
                            <button type="submit" id="button">changer</button>
                    </div>
                </div>
                
                <div class="buzzer">
                    <h3 class="section-head">Alèrte</h3>
                    <div class="text">
                        <p>Pour arrêter le buzzer cliquez ici</p>

                        <button type="submit" id="buzzer">Arrêter</button>
                            </div>
                    
                </div>
                </div>
            </div>
</div>

   
</body>
<script src="Dashboard/barside.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="Dashboard/meanchart.js"></script>
</html>